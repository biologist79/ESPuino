	bool "RASPIAUDIO ESP32 Muse PROTO"

config BOARD_NODEMCU_32S
	bool "NodeMCU 32S"

config BOARD_NODEMCU_DEVKIT
	bool "AZ Delivery ESP32 NodeMCU/DevKitC"

config BOARD_TTGO_T8
	bool "LilyGo TTGO T8"

